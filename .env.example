# Environment Variables Example
# Copy this file to .env.local and fill in your values

# Changelog (2026-01-18):
# - Made SMTP_* optional and documented as legacy/optional
# - Marked NEXT_PUBLIC_EMAIL_* as legacy/optional (kept for compatibility)
# - App now sends mail via Resend (`RESEND_API_KEY`) by default
# See `env.mjs` for the runtime schema mappings.

# Development
NODE_ENV=development
NGROK_AUTHTOKEN=your_ngrok_token_here

# Dropbox Sign API
NEXT_DROPBOX_SIGN_API_KEY=your_dropbox_sign_api_key
NEXT_PUBLIC_DROPBOX_SIGN_CLIENT_ID=your_dropbox_client_id
NEXT_PUBLIC_DROPBOX_SIGN_DOMAIN=your_dropbox_domain
NEXT_PUBLIC_DROPBOX_SIGN_CALLBACK_URL=your_callback_url

# Email Configuration
# Legacy SMTP (optional) â€” commented out by default in `.env`
# SMTP_HOST=smtp.example.com
# SMTP_PORT=465
# SMTP_USER=your_smtp_user
# SMTP_PASS=your_smtp_password
# Note: the app uses `RESEND_API_KEY` (Resend) for sending by default.
# The NEXT_PUBLIC_EMAIL_* entries below are retained for backwards compatibility.
NEXT_PUBLIC_EMAIL_HOST=smtp.gmail.com
NEXT_PUBLIC_EMAIL_PORT=587
NEXT_PUBLIC_EMAIL_SECURE=false
NEXT_PUBLIC_EMAIL_USER=your_email@gmail.com
NEXT_PUBLIC_EMAIL_PASSWORD=your_app_password

# Application
APP_SECRET_KEY=your_secret_key_here
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Resend API
RESEND_API_KEY=your_resend_api_key

# Video Conferencing
NEXT_PUBLIC_WHEREBY_API_KEY=your_whereby_api_key
NEXT_PUBLIC_WHEREBY_SUBDOMAIN_URL=https://your-subdomain.whereby.com
NEXT_PUBLIC_JITSI_APP_ID=your_jitsi_app_id
NEXT_PUBLIC_JITSI_API_KEY=your_jitsi_api_key


# Feature flags / build options
# Enable Sentry error reporting in non-local environments
ENABLE_SENTRY=false
# Populate with 'true' to enable build analysis tools
ANALYZE=false
# Enable source maps in production builds
ENABLE_SOURCE_MAPS=false

# WebSocket toggle
NEXT_PUBLIC_ENABLE_WEBSOCKET=false

# CI flag (optional)
# Set to 'true' in CI environments
CI=false

# Agora (real-time communications)
NEXT_PUBLIC_AGORA_APP_ID=your_agora_app_id
NEXT_PUBLIC_AGORA_CERTIFICATE=your_agora_certificate

# Database (MongoDB)
MONGODB_URI=your_mongodb_connection_string

# Invite secret key used to protect invite endpoints
INVITE_SECRET_KEY=your_invite_secret_key

# Sentry configuration (optional)
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_SUPPRESS_INSTRUMENTATION_FILE_WARNING=1
SENTRY_SUPPRESS_GLOBAL_ERROR_HANDLER_FILE_WARNING=1
SENTRY_AUTH_TOKEN_TRIKE=your_sentry_auth_token_trike
SENTRY_CLIENT_SECRET=your_sentry_client_secret
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# GitHub Personal Access Token (used by scripts/deployments if any)
GITHUB_PAT=your_github_pat